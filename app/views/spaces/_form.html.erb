



<div class="col-md-6 col-md-offset-3">

<h2>Post a Space</h2>

<%= form_for @space do |f| %>
  <%= render 'errors' %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Name' , class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.text_field :address, placeholder: 'Address', class:"form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :city %>
  <%= f.text_field :city, placeholder: 'City', class:"form-control"%>
    
  </div>
  
   <div class="form-group">
     <%= f.label :state %>
  <%= f.text_field :state, placeholder: 'State', class:"form-control"%>
    
  </div>
  
   <div class="form-group">
     <%= f.label :descrition %>
     <%= f.text_area :description, placeholder: 'Describe your space', class:"form-control"%>
    
  </div>
  
  
   <div class="form-group">
     <%= f.label :price %>
     <%= f.text_field :price, placeholder: 'price', class:"form-control"%>
    
  </div>
  
   <div class="form-group">
     <%= f.label "Image" %>
   <%= f.file_field :image, class:"form-control" %>
    
  </div>
  
 
  <div class="form-group">
    <%= f.submit 'Submit', class:"btn btn-primary btn-lg"%>
  </div>
  
<% end %>

</div>