
<div class="login-screen">
  <div class="panel-login blur-content">
    <div class="panel-heading"><br />SlimSpace<br /></div><!--.panel-heading-->

    <div id="pane-login" class="panel-body active">
      <h2>Login to Slimspace</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <%= devise_error_messages! %>

      <div class="form-group">
        <div class="inputer">
          <div class="input-wrapper">
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder: "Enter your email address" %>
          </div>
        </div>
      </div><!--.form-group-->
      <div class="form-group">
        <div class="inputer">
          <div class="input-wrapper">
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder: "Enter your password" %>
          </div>
        </div>
      </div><!--.form-group-->

      <div class="form-buttons clearfix">
        <label class="pull-left"><%= f.check_box :remember_me %> Remember me</label>
        <%= f.submit "Log in", class:"btn btn-success pull-right" %>
      </div><!--.form-buttons-->
<% end %>


      <ul class="extra-links">
        <li><%= link_to "Forgot your password?", new_password_path(resource_name), class:"show-pane-forgot-password" %></li>
        <li><%= link_to "Create a new account", new_registration_path(resource_name), class: "show-pane-create-account" %></li>
      </ul><br />
    </div><!--#login.panel-body-->
    </div>
  </div>

</div>
