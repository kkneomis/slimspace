<%= form_for([@space, @booking]) do |f| %>
<div class="row">
  <div class="col-md-12">
    <div class="panel">
      <div class="panel-heading">
        <div class="panel-title"><h4>BOOK THIS SPACE</h4></div>
      </div><!--.panel-heading-->
      <div class="panel-body">

        <div class="row example-row">
          <style>
            .sample-member719 {
              background-image: url('/assets/room.jpg');
            }
          </style>
          <div class="col-md-4">
            <div class="card card-user card-clickable card-clickable-over-content">

              <div class="card-heading heading-full">
                <%= cl_image_tag(@space.image_url(:thumbnail), width:"100%") %>

                <div class="clickable-button">
                  <div class="layer bg-green"></div>
                  <a class="btn btn-floating btn-green initial-position floating-open"><i class="ion-android-share-alt"></i></a>
                </div>

                <div class="layered-content bg-green">
                  <div class="overflow-content">
                    <h4>Follow Aleksio</h4>
                    <ul class="inline-list social-list borderless">
                      <li><a class="btn btn-facebook btn-ripple"><i class="ion-social-facebook"></i></a></li>
                      <li><a class="btn btn-twitter btn-ripple"><i class="ion-social-twitter"></i></a></li>
                      <li><a class="btn btn-googleplus btn-ripple"><i class="ion-social-googleplus"></i></a></li>
                    </ul>
                  </div><!--.overflow-content-->
                  <div class="clickable-close-button">
                    <a class="btn btn-floating initial-position floating-close"><i class="ion-android-close"></i></a>
                  </div>
                </div>

              </div><!--.card-heading-->

              <div class="card-body">
                <h3 class="card-title"><a href="#"><%= @space.name %></a></h3>
                <%= rating_for @space, "space", :disable_after_rate => true %>
                <div class="subhead">Room 300 in the <a href="#">Lesko Building</a></div>

              </div><!--.card-body-->

              <div class="card-footer">
                <%= link_to "View this Space", @space, class:"btn btn-xs btn-indigo pull-right" %>
              </div><!--.card-footer-->

            </div><!--.card-->
          </div><!--.col-md-4-->
          <div class="col-md-8">
            <div class="form-group">
              <label class="control-label col-md-3">Event Name</label>
              <div class="col-md-9">
                <div class="inputer">
                  <div class="input-wrapper">
                    <input type="text" name="" class="form-control" autofocus>
                  </div>
                </div>
              </div>
            </div><!--.form-group-->

            <div class="form-group">
              <label class="control-label col-md-3">Event Period</label>
              <div class="col-md-9">
                <div class="control-group">
                  <div class="controls">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="ion-android-calendar"></i></span>
                      <div class="inputer">
                        <div class="input-wrapper">
                          <%= f.datetime_select :start_time%>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div><!--.form-group-->
            <div class="form-group">
              <label class="control-label col-md-3">Length</label>
              <div class="col-md-9">
                <div class="inputer">
                  <div class="input-wrapper">
                    <%= f.number_field 'length', min: 1, class:"form-control"  %>
                  </div>
                </div>
              </div>
            </div><!--.form-group-->

            <%= f.submit 'Book this Space!', class:"btn btn-primary btn-lg pull-right" %>

          </div><!--.col-md-8-->
        </div><!--.row-->

      </div><!--.panel-body-->
    </div><!--.panel-->
  </div><!--.col-md-12-->
</div><!--.row-->
<% end %>


<%= form_for([@space, @booking]) do |f| %>
<section>
<div class="container">
<div class="booking-section mrgb7x">
<div class="row">
	<div class="col-md-4  col-sm-6 animated out" data-delay="0" data-animation="fadeInUp">
		<div class="booking-title"> <span>1</span>
			<h4>property information</h4>
		</div>
		<div class="property-info mrgt6x">
			<div class="property-box border-hover">
        <div class="appartment-img"><%= cl_image_tag(@space.image_url(:thumbnail), width:"100%") %>
          <div class="room-price"><span>$<%# @desk.price %><sup>/hour</sup></span></div>
					<div class="like-btn"><a href="#"><i class="fa fa-heart"></i></a></div>
				</div>
				<div class="property-text">
					<div class="resort-name">
            <h4><%= @space.name %></h4>
            <li><%= rating_for @space, "space", :disable_after_rate => true %></li>
						
            <p><%= @space.city %>, <%= @space.state %> </p>
					</div>
				</div>
				
			</div>
		</div>
	</div>

	<div class="col-md-4 col-sm-6 animated out" data-delay="0" data-animation="fadeInUp">
