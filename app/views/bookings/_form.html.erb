


<%= form_for([@space, @booking]) do |f| %>
<section>
<div class="container">
<div class="booking-section mrgb7x">
<div class="row">
	<div class="col-md-4  col-sm-6 animated out" data-delay="0" data-animation="fadeInUp">
		<div class="booking-title"> <span>1</span>
			<h4>property information</h4>
		</div>
		<div class="property-info mrgt6x">
			<div class="property-box border-hover">
        <div class="appartment-img"><%= cl_image_tag(@space.image_url(:thumbnail), width:"100%") %>
          <div class="room-price"><span>$<%# @desk.price %><sup>/hour</sup></span></div>
					<div class="like-btn"><a href="#"><i class="fa fa-heart"></i></a></div>
				</div>
				<div class="property-text">
					<div class="resort-name">
            <h4><%= @space.name %></h4>
            <li><%= rating_for @space, "space", :disable_after_rate => true %></li>
						
            <p><%= @space.city %>, <%= @space.state %> </p>
					</div>
				</div>
				
			</div>
		</div>
	</div>

	<div class="col-md-4 col-sm-6 animated out" data-delay="0" data-animation="fadeInUp">
		<div class="booking-title"> <span>3</span>
			<h4>Time Selection</h4>
		</div>
		<div class="payment-method mrgt6x">
			<form id="payment-form" method="post" name="payment">
			
				<div class="form-group">
					<label>Start Date and time</label><br>
          <%= f.text_field :start_time, id:"datetimepicker" %>
				</div>
				<div class="form-group">
					<label>Duration of Booking (in hours)</label>
					<%= f.number_field 'length', min: 1  %>
				</div>
				<div class="col-md-6 no-padding">
          <%= f.submit 'Book this Space!', class:"btn btn-primary btn-lg" %>
				</div>
				<div class="col-md-6 padding-rit0">
            
				</div>
			</form>
		</div>
	</div>
  
	</div>
  
  <div class="row">
  
    	<div class="col-md-12  col-sm-6 animated out" data-delay="0" data-animation="fadeInUp">
      <div class="booking-title"> <span>2</span>
			<h4>Booking Availability</h4>
		</div>
      <div id='calendar'></div>

	</div>
  
  </div>
	</div>
</div>
</section>

<% end %> 


