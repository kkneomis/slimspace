<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' rel='stylesheet' type='text/css'>
  <script src="http://maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
  <script src="http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
  <script src='http://google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
</head>
<body class="fixed-footer">
    <%= render 'layouts/onsiteHeader' %>

    <div class="content">
      <%= yield %>
      <div class="footer-links margin-top-20">
        <div class="row no-gutters">
          <div class="col-xs-6 bg-indigo">
            <a href="layout-flexible-space.html">
              <span class="state">&nbsp;</span>
              <span>&nbsp;</span>
            </a>
          </div><!--.col-->
          <div class="col-xs-6 bg-indigo">
            <a href="http://www.slimspace.io">
              <span class="state">powered by</span>
              <span>Slimspace</span>
            </a>
          </div><!--.col-->
        </div><!--.row-->
      </div><!--.footer-links-->
    </div>

<!-- BEGIN INITIALIZATION-->
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script>
  Pleasure.init();
  Layout.init();
  FormsPickers.init();
</script>
    <script>
      $( document ).ready(function() {
        handler = Gmaps.build('Google');
        handler.buildMap({provider: {}, internal: {id: 'map'}}, function () {
          markers = handler.addMarkers([
            {
              "lat": 38.9047,
              "lng": 77.0164,
              "picture": {
                "url": "https://cws.auburn.edu/map/Content/images/suggestion-icon-placemark.png",
                "width": 32,
                "height": 32
              },
              "infowindow": "hello!"
            }
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
        });
      });
        $(document).ready(function() {
          $("#calendar").fullCalendar({
            header: {
            left: "prev,next today",
              center: "title",
              right: "month,agendaWeek,agendaDay"},
          defaultView: "month",
              height: 500,
              slotMinutes: 15,
              events: "/testjsons.json",
              timeFormat: "h:mm t{ - h:mm t} ",
              dragOpacity: "0.5"
        });
        });
    </script>
<!-- END INITIALIZATION-->


</body>
</html>
