<div class="login-screen">
  <div class="panel-login blur-content">
    <div class="panel-heading"><br />Slimspace<br /></div><!--.panel-heading-->

    <div id="pane-create-account" class="panel-body active">
      <h2>Create a New Account</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Enter your full name" %>
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.email_field :email, class:"form-control", placeholder:"Enter your email address" %>
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Enter your password" %>
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Enter your password again" %>
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-group">
          <label><input type="checkbox" name="remember" value="1"> I have read and agree to the term of use.</label>
        </div>
        <div class="form-buttons clearfix">
          <%= f.submit "Sign Up",  class:"btn btn-success pull-right" %>
          <%= link_to "LOG IN", new_user_session_path, class:"btn btn-white pull-left show-pane-login" %><br />
        </div><!--.form-buttons-->
      <% end %>
    </div><!--#login.panel-body-->
  </div><!--.blur-content-->
</div><!--.login-screen-->
