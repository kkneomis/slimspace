



<div class="col-md-6 col-md-offset-3">

<h2>Post a Space</h2>

<%= form_for @space do |f| %>
  <%= render 'errors' %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: 'Name' , class:"form-control"%>
  </div>
  
  <div class="field">
    <%= f.hidden_field :parent_id, :value => @parent %>
  </div>
  <% if @space == nil %>
  
  
 <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, placeholder: 'Address', class:"form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :city %>
  <%= f.text_field :city, placeholder: 'City', class:"form-control"%>
  </div>
  
   <div class="form-group">
     <%= f.label :state %>
  <%= f.text_field :state, placeholder: 'State', class:"form-control"%>
    
  </div>
 <% end %> 
 
  <div class="form-group">
   <div class="row"> 
    <div class="col-md-6">
      <%= f.label :price %>
      <%= f.text_field :price, placeholder: 'Price', class:"form-control"%>
    </div>
    <div class="col-md-6">
      <%= f.label "Per" %>
      <%= f.select :scale, ["hour", "day", "week", "month", "year" ], class:"form-control"%>
    </div>
    </div>
  </div>
  
  
  
   <div class="form-group">
     <%= f.label :descrition %>
     <%= f.text_area :description, placeholder: 'Describe your space', class:"form-control"%>
    
  </div>
  
  
  
  <div class="form-group">
  <%= f.label "Is this unit private?" %><br>
  <%= f.check_box :private, id:"box", :data => {'on-text'=>'YES', 'off-text'=>'NO' } %>
</div>
  
  <div class="form-group">
    <%= f.label "Can other users book this unit?" %><br>
  <%= f.check_box :can_book, id:"box", :data => {'on-text'=>'YES', 'off-text'=>'NO' } %>
</div>
  
  <div class="form-group">
    <%= f.label "Does this space require you to confirm bookings?" %><br>
    <%= f.check_box :confirm, id:"box", :data => {'on-text'=>'YES', 'off-text'=>'NO' } %>
  </div>
  
   <div class="form-group">
     <%= f.label "Image" %>
   <%= f.file_field :image, class:"form-control" %>
    
  </div>
  
 
  <div class="form-group">
    <%= f.submit 'Submit', class:"btn btn-primary btn-block"%>
  </div>
  
<% end %>

</div>