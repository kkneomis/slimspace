
<section class="border-top">
	<div class="container">
		<div class="page-title mrgb5x mrgt6x clearfix">
			<h4 class="page-name">Available Spaces</h4>
			<ul class="breadcrumb">
				<li><a href="/">Home</a></li>
				<li class="active"><a href="#">Spaces</a></li>
			</ul>
		</div>
	</div>
</section>

<section>
	<div class="container">
		<div class="property-filter clearfix">
	<% @spaces.each_slice(4) do |space_group| %>
			<div class="row">
				<ul class="filter-list clearfix">
        <% space_group.each do |space| %>  
					<li class="mix sale col-md-3 col-sm-4 mrgb5x" data-price="5">
						<div class="property-box" >
              <div class="appartment-img"><%= link_to cl_image_tag(space.image_url(:mini), width:"100%"), space %>
							</div>
							<div class="property-text">
								<div class="appartment-name">
									<h4><%= space.name %></h4>
                  <p><%= space.city %>, <%= space.state %></p>
								</div>
								<ul class="appartment-detail">
              </ul>
							</div>
						</div>
					</li>
          <% end %>
				</ul>
			</div>
       <% end %>
		</div>
	</div>
</section>

      

				


