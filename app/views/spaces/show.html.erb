<section class="border-top">
	<div class="container">
		<div class="page-title mrgb6x mrgt6x clearfix">
			<h4 class="page-name"><%= @space.city %></h4>
      <div class="tag-bar"> <a href="#"><span><%= @space.state %></span></a> </div>
			<ul class="breadcrumb">
				<li><a href="#">Pages</a></li>
				<li class="active"><a href="#">Property Single</a></li>
			</ul>
		</div>
	</div>
</section>

<section>
	<div class="container">
		<div class="property-single">
			<div class="col-md-6 no-padding col-sm-8 animated out" >
        <div ><%= cl_image_tag(@space.image_url(:display)) %>
					<div class="image-detail">
						<h5 class="place-name"><%= @space.name %>
              <%= rating_for @space, "space", :disable_after_rate => true %></h5>
					</div>
				</div>
			</div>
			<div class="col-md-6 col-sm-4 animated out" >
				<div class="property-heading property-info">
					<h4><span><%= @space.name %></span></h4>
					<p>
            <b>Address:</b>
            <%= @space.address %>, <%= @space.city %>, <%= @space.state %>
          
          </p>
          <p><%= @space.description %></p>
          
          <% if current_user == @space.user %>
            <div class="booking-btn"><%= link_to "ADD A DESK", new_space_desk_path(@space), class:"book-it" %></div>
          <% end %>
				</div>
        <div class="col-md-6 no-padding col-sm-6 animated out" >

			</div>
			</div>
		</div>
    
	</div>
  
</section>

<section>
	<div class="container" >
		<div class="featured-properties animated out" >
			<div class="section-heading mrgt7x mrgb7x">
				<h3><span>AVAILABLE SEATS IN THIS LOCATION</span></h3>
			</div>
      <% @space.desks.each_slice(3) do |desk_group| %>
			<div class="section-detail">
        <% desk_group.each do |desk| %>
        <div class="col-md-4 col-sm-6">
					<div class="home2 property-box border-hover animated out" >
						<div class="appartment-img"><%= cl_image_tag(desk.image_url(:thumbnail)) %>
              <div class="room-price"><span>$<%= desk.price %><sup>/week</sup></span></div>
						</div>
						<div class="property-text">
							<div class="resort-name">
								<h4><%= desk.name %></h4><br>
								<p><%= desk.description %></p>
							</div>
							<div class="detail-btn mrgt4x mrgb3x"><%= link_to "BOOK IT NOW", new_space_desk_booking_path(@space, desk), class:"more-detail" %>  </div>
						</div>
						<ul class="home2 appartment-detail">
              <li><%= rating_for desk, "desk", :disable_after_rate => true %></li>
						</ul>
					</div>
				</div>
        
         <% end %>
			</div>
     <% end %>
		</div>
	</div>
</section>

