 <section class="border-top">
	<div class="container">
		<div class="page-title mrgb6x mrgt6x clearfix">
      <h4 class="page-name"><%= current_user.email %></h4>
      <div class="tag-bar"> <a href="#"><span>Recent Bookings</span></a> </div>
			<ul class="breadcrumb">
				<li><a href="#">Pages</a></li>
				<li class="active"><a href="#">Bookings booked</a></li>
			</ul>
		</div>
	</div>
</section>

<div class="row">
  <div class="col-md-5">
    <div id='bookedcalendar'></div>
  </div>

<div class="col-md-7 booked">
  <br><br>
<% @bookings.order('created_at DESC').each do |b| %>  
  <% @space= Space.find(b.space_id) %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= link_to cl_image_tag(@space.image_url(:mini), width:"100%"), @space %>
      </div>

      <div class="col-md-3">

        <b><a href="#" class="alert-link"> <%= @space.name %><br></a> <%= b.start_time.strftime("%b/%d/%Y")  %> at <%= b.start_time.strftime("%I:%M%p")  %> for <%= b.length %> hours</b>
        
        <p>
            <b>Address:</b>
          <%=@space.address %>, <%= @space.city %>, <%= @space.state %> <br>
          </p>
        <% if b.approved == nil %>  
        <div class="progress">
            <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 100%">Under review...
            </div>
          </div>


        
        <% end %>
        <%= link_to 'CANCEL', [@space, b] , method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger " %>
            </div>
     
     </div> 
  </div>
 <br>
       <% end %>

  </div>				

</div>
