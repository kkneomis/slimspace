<div class="container">
    <div class="span3 well" style="background: #E77817">
        <center>
          <%= cl_image_tag(@user.avatar_url(:display), class: "img-circle") %>
        
          <h3><%= @user.name %></h3>
          <% if @user == current_user %>
              <i class="fa fa-pencil"><%= link_to "Edit Profile", edit_user_registration_path  %></i>
          <% end %>
		</center>
      <em><%= @user.bio %></em>
  </div>
</div>


<section>
	<div class="container">
		<div class="property-filter clearfix">
      <% @spaces.where(parent_id: nil).each_slice(4) do |space_group| %>
			<div class="row">
				<ul class="filter-list clearfix">
        <% space_group.each do |space| %>  
					<li class="mix sale col-md-3 col-sm-4 mrgb5x" data-price="5">
						<div class="property-box" >
              <div class="appartment-img"><%= link_to cl_image_tag(space.image_url(:mini), width:"100%"), space %>
							</div>
							<div class="property-text">
								<div class="appartment-name">
									<h4><%= space.name %></h4>
                  <p><%= space.city %>, <%= space.state %></p>
								</div>

							</div>
						</div>
					</li>
          <% end %>
				</ul>
			</div>
       <% end %>
		</div>
	</div>
</section>
